<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a07150931.lxc.thread.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANR(Application Not Responsing)"
        android:onClick="anr"   />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="thread 类口实现多线程"
        android:onClick="threadClass"   />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Runable 接口实现多线程"
        android:onClick="runnableinterface"     />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer TimerTask 实现多线程"
        android:onClick="timertask"     />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler 消息处理器"
        android:onClick="handlermessage"    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask 实现异步操作"
        android:onClick="asynctask"     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"       />

</LinearLayout>
